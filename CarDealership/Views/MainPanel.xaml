<UserControl 
    x:Class="CarDealership.Views.MainPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarDealership.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="1080" Width="1594">

    <Grid Width="1594" Height="1080" Background="#A6BBE3">
        <TextBox CornerRadius="8" Margin="0,444,0,604" HorizontalAlignment="Center" TextWrapping="Wrap" Text="First Name" Height="32" Width="456 " TextChanged="TextBox_TextChanged_1" RenderTransformOrigin="1,0"/>
        <TextBox CornerRadius="8" Margin="0,604,0,444" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Telephone Number" Grid.Column="1" Height="32" Width="456"/>
        <TextBox CornerRadius="8" Margin="0,484,0,564" HorizontalAlignment="Center" TextWrapping="Wrap" Text="E-mail" Grid.Column="1" Height="32" Width="456"/>
        <TextBox CornerRadius="8" Margin="0,524,0,524" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Password" Height="32" Width="456" TextChanged="TextBox_TextChanged"/>
        <DatePicker CornerRadius="8" Margin="0,564,0,0" HorizontalAlignment="Center" Width="456" VerticalAlignment="Top" />

    </Grid>
</UserControl> 
 
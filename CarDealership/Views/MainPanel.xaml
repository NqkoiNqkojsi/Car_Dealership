<UserControl 
    x:Class="CarDealership.Views.MainPanel"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarDealership.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Height="1080" Width="1594">

    <Grid Width="1594" Height="1080" Background="#A6BBE3" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid Width="1354" Height="970" Background="#A6BBE3" Margin="0,0,240,110" >
            <TextBox Header="Username" CornerRadius="8" HorizontalAlignment="Center" TextWrapping="Wrap" Height="60" Width="456"/>
            <TextBox Header="E-mail" CornerRadius="8" TextWrapping="Wrap" Height="60" Width="456"/>
            <PasswordBox Header="Password" Margin="0, 455,0,0" CornerRadius="8" Height="60" Width="457"/>
            <TextBox Header="Telephone Number" CornerRadius="8" TextWrapping="Wrap" Height="60" Width="456"/>
            <ComboBox x:Name="Day" CornerRadius="8" Header="Day" PlaceholderText="Pick a day" Width="147" Height="60"/>
            <ComboBox x:Name="Month" CornerRadius="8" Header="Month" PlaceholderText="Pick a month" Width="147"  HorizontalAlignment="Center" Height="60"/>
            <ComboBox x:Name="Year" CornerRadius="8" Header="Year" PlaceholderText="Pick a year" Width="147" Height="60"/>
            <Button Content="Sign in" CornerRadius="8" VerticalAlignment="Top" Height="60" Width="457" HorizontalAlignment="Center"/>
        </Grid>

        <StackPanel Height="110" Width ="1594" Margin="0,970,0,0" Background="Pink"/>
        <StackPanel Margin="1354,0,0,0" Background="Pink" Orientation="Vertical" Width="240" />
    </Grid>

</UserControl> 
 
        <ComboBox Margin="332,100,0,0" Width="290" Height="86" Header="Model" FontSize="30" SelectionChanged="ComboBox_SelectionChanged" />
        <ComboBox Margin="0,100,0,0" Width="290" Height="86" Header="Year" FontSize="30" HorizontalAlignment="Center" />
        <ComboBox Margin="972,100,0,0" Width="290" Height="86" Header="Year" FontSize="30" />
    </Grid>
</UserControl>

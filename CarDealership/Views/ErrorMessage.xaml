<UserControl
    x:Class="CarDealership.Views.ErrorMessage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CarDealership.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="350" 
    d:DesignHeight="115">

    <Grid>
        <Rectangle x:Name="Image" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50" RenderTransformOrigin="0.32,0.5" Margin="20,14,0,0">
            <Rectangle.Fill>
                <ImageBrush Stretch="Fill" ImageSource="/Assets/Error logo.png"/>
            </Rectangle.Fill>
        </Rectangle>
        <TextBlock x:Name="ErrorMessage1" HorizontalAlignment="Left" Margin="83,19,0,0" TextWrapping="Wrap" Text="An error occurred." VerticalAlignment="Top" Width="253" Height="20" FontWeight="Bold"/>
        <TextBlock x:Name="ErrorMessageBody" HorizontalAlignment="Left" Margin="83,51,0,0" TextWrapping="Wrap" Text="Error details" VerticalAlignment="Top" Width="255" Height="52" FontWeight="Normal" FontSize="10"/>
    </Grid>
</UserControl>
